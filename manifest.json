{
    "manifest_version": 3,
    "name": "No Cookie Banners",
    "description": "This extension automatically clicks cookie banners away.",
    "version": "0.1",
    "icons": {
        "16": "images/icons/cookie-icon-16.png",
        "32": "images/icons/cookie-icon-32.png",
        "128": "images/icons/cookie-icon-128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "images/icons/cookie-icon-16.png"
    },
    
    
    
    "permissions": [
        "<all_urls>",
        "storage",
        "tabs"
    ],
    "externally_connectable": {
        "matches": ["*://*.google.com/*"]
    },


    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["styles.css"],
            "js": [
                "scripts/utility.js",
                "scripts/storageutility.js",
                "scripts/constants.js",
                "scripts/logger.js",
                "scripts/texts.js",
                "scripts/clickableexecutor.js",
                "scripts/htmlprocessor.js",
                "scripts/main.js"
            ]
        }
    ]
}